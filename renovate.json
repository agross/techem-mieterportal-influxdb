{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDigestUpdates",
    ":disableRateLimiting",
    ":enableVulnerabilityAlerts",
    ":rebaseStalePrs",
    ":semanticCommitsDisabled"
  ],
  "labels": ["dependencies"],
  "customManagers": [
    {
      "description": "Magic comments",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.(ya?ml|j2)$/"],
      "matchStrings": [
        "# renovate: (?<datasource>[a-z-.]+?)=(?<packageName>.+?)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?\\w+?[:=]\\s*(?<currentValue>.+?)\\s",
        "# renovate: (?<datasource>pypi)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?(?<packageName>\\w+?)==\\s*(?<currentValue>.+?)\\s",
        "# renovate: (?<datasource>git-refs)=(?<packageName>.+?) ref=(?<currentValue>.+?)(?: depName=(?<depName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?\\w+?[:=]\\s*(?<currentDigest>.+?)\\s"
      ]
    }
  ]
}
